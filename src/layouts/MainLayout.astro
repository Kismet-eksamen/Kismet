    opacity: 0.1;
    z-index: -1;
    pointer-events: none;
  }
  body.collab-page::before {
    content: "";
    position: fixed;
    top: 0;
    left: 0;
    height: 100%;
    width: 100%;
    background-image: url("/img/collab_bg.webp");
    background-size: 253px 340px;
    background-position: top left;
    background-repeat: repeat;
    opacity: 0.24;
    z-index: -1;
    pointer-events: none;
  }
  body.index-page::before {
