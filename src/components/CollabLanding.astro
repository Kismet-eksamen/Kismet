<div class="contact-toggle">
  <input type="checkbox" id="contact-toggle" hidden />

  <ButtonSquare text="Contact us" id="contact-toggle" />

  <div id="contact-box" class="contact-box">
    <p>Email: kontakt@kismet.dk</p>
    <p>Instagram: @kismetcph</p>
    <p>Adresse: Adelgade, KBH K</p>
  </div>
</div>

<p class="lookingforw">We are looking forward to hear from you:)</p>

<hr />

<style>
  .collab-flexbox {
    display: flex;
    flex-direction: column-reverse; /* MOBIL: slider først */
    gap: 2rem;
    padding: 2rem;
  }

  hr {
    margin: 60px;
    width: 300px;
    height: 2px;
    border: none;
    place-self: center;
    place-content: center;
    background-color: var(--light-purple);
  }

  h1 {
    color: var(--light-purple);
  }

  h3 {
    color: var(--light-green);
  }

  p {
    color: var(--plum);
  }

  .collab-text {
    text-align: left;
    max-width: 700px;
    line-height: 1.8;
    margin-top: 60px;
    color: var(--dark-green);
  }

  .lookingforw {
    color: var(--plum);
  }

  .contact-toggle {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 1rem;
    margin: 3rem auto;
  }

  .contact-box {
    margin-top: 1rem;
    padding: 2rem;
    background-color: var(--beige);
    /* border: 4px solid var(--beige); */
    box-shadow: 10px 10px var(--plum);

    color: var(--beige);

    display: none;
    transition: all 0.8s ease;
  }

  .contact-box p {
    color: var(--plum);
  }
  #contact-toggle:checked ~ .contact-box {
    display: block;
  }

  @media (min-width: 1024px) {
    hr {
      width: 1200px;
    }
    .collab-flexbox {
      flex-direction: row;
      justify-content: space-between;
      align-items: center;
      max-width: 1120px;
      margin: 0 auto;
      padding: 0;
      margin-top: -20px;
    }
    .collab-wrapper {
      max-width: 440px; /* eller prøv fx 420px hvis du vil ha det endnu smallere */
    }
    .collabs-section {
      margin-left: 60px;
    }
    .lookingforw {
      place-self: center;
      margin-top: 2rem;
    }
    .collab-slide {
      margin-top: -50px;
    }
  }
</style>
