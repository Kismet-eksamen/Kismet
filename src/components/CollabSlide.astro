---
import MainLayout from "../layouts/MainLayout.astro";

const images = [
  "/img/collab_slide_0.webp",
  "/img/collab_slide_1.webp",
  "/img/collab_slide_2.webp",
  "/img/collab_slide_3.webp",
  "/img/collab_slide_4.webp",
  "/img/collab_slide_5.webp",
  "/img/collab_slide_6.webp",
  "/img/collab_slide_7.webp",
  "/img/collab_slide_8.webp",
  "/img/collab_slide_9.webp",
  "/img/collab_slide_10.webp",
  "/img/collab_slide_11.webp",
  "/img/collab_slide_12.webp",
  "/img/collab_slide_13.webp",
];
---

<div class="slide-box">
  <div class="slide">
    <div class="img-wrap">
      <img id="slide-img" src={images[0]} alt="collab slide" />
    </div>
  </div>
</div>
<div class="slide-buttons">
  <button id="prev-btn">←</button>
  <button id="next-btn">→</button>
</div>

<!-- jeg uploader slide.js filen herunder -->
<script src="/scripts/collabslide.js" type="module"></script>

<style>
  .slide-box {
    width: 242px;
    border-radius: 10px;
    border: 8px solid var(--light-green);
    box-shadow: 0 5px 15px var(--plum);
    margin: 70px auto 20px auto;
    display: flex;
    justify-content: center;
    align-items: center;
    overflow: hidden;
  }

  .img-wrap {
    width: 100%;
    height: 300px;
    display: flex;
    justify-content: center;
    align-items: center;
    overflow: hidden;
  }

  .img-wrap img {
    height: 100%;
    width: auto;
    object-fit: cover;
    transition: opacity 0.3s ease-in-out;
    border-radius: 4px;
  }

  .slide-buttons {
    display: flex;
    justify-content: center;
    gap: 2rem;
    margin-bottom: 2rem;
  }

  .slide-buttons button {
    padding: 0.5rem 1.2rem;
    font-size: 1.5rem;
    background-color: #eee;
    border: none;
    border-radius: 8px;
    cursor: pointer;
    transition: background-color 0.2s ease;
  }

  .slide-buttons button:hover {
    background-color: #ccc;
  }
</style>
