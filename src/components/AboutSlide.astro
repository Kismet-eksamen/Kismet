---
import MainLayout from "../layouts/MainLayout.astro";

const images = ["img/about-1.webp", "/img/about-2.webp", "/img/about-3.webp"];
---

<div class="slide-box">
  <div class="slide">
    <div class="img-wrap">
      <img id="slide-img" src={images[0]} alt="about slide" />
    </div>
  </div>
</div>
<div class="slide-buttons">
  <button id="prev-btn">
    <span class="arrow">←</span>
    <span class="label">BACK</span>
  </button>
  <button id="next-btn">
    <span class="arrow">→</span>
    <span class="label">NEXT</span>
  </button>
</div>

<script src="/scripts/aboutslide.js" type="module"></script>

<style>
  .slide-box {
    width: 500px;
    height: 400px;
    border-radius: 5px;
    margin: 20px auto 20px auto;
    display: flex;
    justify-content: center;
    align-items: center;
    overflow: hidden;
  }

  .img-wrap {
    width: 600;
    height: 500px;
    display: flex;
    justify-content: center;
    align-items: center;
    overflow: hidden;
  }

  .img-wrap img {
    height: 100%;
    width: auto;
    object-fit: cover;
    transition: opacity 0.3s ease-in-out;
    border-radius: 4px;
  }

  .slide-buttons {
    display: flex;
    justify-content: center;
    gap: 13rem;
    margin-bottom: 2rem;
  }

  .slide-buttons button {
    padding: 0.25rem 2rem;
    font-size: 0.8rem;
    background-color: whitesmoke;
    border: 1px solid var(--plum);
    color: var(--plum);
    border-radius: 8px;
    cursor: pointer;
    transition: background-color 0.2s ease;
  }

  .slide-buttons button:hover {
    background-color: var(--dark-green);
    color: var(--beige);
  }
  .slide-buttons button .arrow {
    margin-right: 0.4em;
  }
</style>
